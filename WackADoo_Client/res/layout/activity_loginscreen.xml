<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wackadoo.wackadoo_client.activites.LoginScreenActivity"
    tools:ignore="MergeRootFrame" >

    
    <!-- ............... BACKGROUND ............... -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.9"
        android:src="@drawable/title_bg" />
    
    
    <!-- ............... HEADER ............... -->
    <LinearLayout 
        android:id="@+id/headerVerticalContainer"
    	android:layout_height="match_parent" 
    	android:layout_width="match_parent"
    	android:orientation="vertical"
    	android:weightSum="1.0">
    
	    <LinearLayout 
	        android:id="@+id/headerHorizontalContainer"
	        android:layout_weight="0.13"
	    	android:layout_height="0dp" 
	    	android:layout_width="match_parent"
	    	android:orientation="horizontal"
	    	android:weightSum="1.0">
	    	
	    	<RelativeLayout 
	      	    android:id="@+id/headerShopContainer"  
		        android:layout_height="wrap_content"
	    	    android:layout_gravity="top|left"
	        	android:layout_width="0dp"
	      		android:layout_weight="0.18">
	      		
	    		<ImageView
	        		android:layout_width="match_parent"
	        		android:layout_height="match_parent"
		        	android:scaleType="fitStart"
	    	    	android:src="@drawable/title_left_corner" />
	    		
	    		<LinearLayout 
	        		android:id="@+id/shopButtonLinearContainer"
	        		android:layout_centerInParent="true"
	    			android:layout_height="match_parent" 
			    	android:layout_width="match_parent"
	    			android:orientation="vertical"
	    			android:weightSum="1.0">
	    			
	    		    <RelativeLayout
	    		        android:id="@+id/shopButtonSpacer" 
	 	    			android:layout_width="match_parent"
	 	    			android:layout_weight="0.10"
	 	    			android:layout_height="0dp" >
	 				</RelativeLayout>
	    			
	    		    <RelativeLayout 
	      	    		android:id="@+id/shopButtonRelativeContainer"
		        		android:layout_height="0dp"
	    	    		android:layout_gravity="top|left"
	        			android:layout_width="wrap_content"
	      				android:layout_weight="0.5">
		    			
		    			<ImageButton
		    	    		android:id="@+id/shopButton"
		    	    		android:background="@null"
		    	    		android:layout_width="wrap_content"
		    	    		android:layout_height="wrap_content"
		    	    		android:scaleType="fitCenter"
		    	    		android:src="@drawable/title_shop_button" />
	    			</RelativeLayout>
	    		</LinearLayout>
	   		</RelativeLayout>
	   		
	    	<RelativeLayout 
	       		android:id="@+id/headerSpacer" 
		        android:layout_width="0dp"
		        android:layout_weight="0.6"
	            android:layout_height="match_parent">
			</RelativeLayout>
	   		
	   		<RelativeLayout 
	      	    android:id="@+id/headerControls"  
		        android:layout_height="wrap_content"
	    	    android:layout_gravity="center"
	        	android:layout_width="0dp"
	      		android:layout_weight="0.2">
	    		
	   		    <ImageButton
				    android:id="@+id/title_sound_button" 
	    	    	android:layout_height="wrap_content"
	    	    	android:layout_width="wrap_content"
	    	    	android:layout_gravity="right"
	    	    	android:layout_centerInParent="true"
	    	    	android:scaleType="fitCenter"
	    	    	android:background="@null"
	    	    	android:src="@drawable/title_sound_off" 
					android:paddingRight="45dp"
	    	    	android:paddingLeft="0dip"
	    	    	android:layout_alignParentRight="true" />
	   		    
	    		<ImageButton
	    		    android:id="@+id/title_info_button" 
	    	    	android:layout_width="wrap_content"
	    	    	android:layout_height="wrap_content"
	    	    	android:layout_gravity="right"
	    	    	android:layout_centerInParent="true"
	    	    	android:scaleType="fitCenter"
	    	    	android:background="@null"
	    	    	android:src="@drawable/title_info_button"
	    	    	android:paddingRight="10dip"
	    	    	android:paddingLeft="0dip"
	    	    	android:layout_alignParentRight="true" />
	    		
				
	   		</RelativeLayout>    		
	    </LinearLayout>
    </LinearLayout>
	    
    
    <!-- ............... LOGO ............... -->
    <LinearLayout 
        android:id="@+id/logoLinearContainer"
    	android:layout_height="match_parent" 
    	android:layout_width="match_parent"
    	android:orientation="vertical"
    	android:weightSum="1.0">
   		
	    <RelativeLayout 
	    	android:id="@+id/logoRelativecontainer" 
	        android:layout_width="wrap_content" 
	        android:layout_height="0dp"
	        android:layout_weight="0.8">
			
	    	<ImageView
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:adjustViewBounds="true"
	    	    android:scaleType="fitCenter"
	    	    android:src="@drawable/title_logo" />
	  	</RelativeLayout>
  	</LinearLayout>
  	
    
    <!-- ............... FOOTER ............... -->
    <LinearLayout 
        android:id="@+id/footerVerticalContainer"
	 	android:layout_height="match_parent" 
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    android:weightSum="1.0">
	 	
	 	<RelativeLayout 
	     	android:id="@+id/footerSpacer" 
		    android:layout_width="match_parent"
		    android:layout_weight="0.6"
	        android:layout_height="0dp">
		</RelativeLayout>
	 	
	 	<RelativeLayout
	 	    android:id="@+id/footerHorizontalContainer"
	    	android:layout_height="0dp" 
	    	android:layout_width="match_parent"
	    	android:layout_weight="0.4">
	    	    
	 	        <ImageView
			 	    android:layout_width="match_parent"
			 	    android:layout_height="match_parent"
			 	    android:layout_alignParentLeft="true"
			 	    android:layout_alignParentBottom="true"
			 	    android:adjustViewBounds="true"
			 	    android:scaleType="fitEnd"
			 	    android:src="@drawable/title_bar"/>
	 	        
	 	        <LinearLayout
			 	    android:id="@+id/footerHorizontalSplittingContainer"
			    	android:layout_height="match_parent" 
			    	android:layout_width="match_parent"
			    	android:orientation="horizontal"
			    	android:weightSum="1.0">
	    		    
	 	            <RelativeLayout 
			       		android:id="@+id/characterFrameSpacer" 
				        android:layout_width="0dp"
				        android:layout_weight="0.25"
			            android:layout_height="match_parent"/>
				 	
	 	            <LinearLayout 
			       		android:id="@+id/characterFrameContainer" 
				        android:layout_width="wrap_content"
			            android:layout_height="match_parent"
				        android:weightSum="1.0"
				        android:orientation="vertical">
	    		    
	 	              	<RelativeLayout 
				       		android:id="@+id/characterFrameContainerSpacer" 
					        android:layout_width="wrap_content"
					        android:layout_weight="0.20"
				            android:layout_height="1dp"/>  
	    		    
	 	                <ImageButton 
			 	    		android:id="@+id/characterFrame"
	 	                	android:background="@null"
			 	    		android:layout_width="match_parent"
			 	    		android:layout_height="wrap_content"
				 	    	android:scaleType="fitCenter"
				 	    	android:layout_weight="0.50"
				 	    	android:src="@drawable/title_character_frame"/> 
				 	</LinearLayout>
		 	
			 	    <RelativeLayout 
			       		android:id="@+id/accountmanagerButtonContainer" 
				        android:layout_width="0dp"
				        android:layout_weight="0.10"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center">
				 	
			 	        <LinearLayout
			 	    		android:id="@+id/footerVerticalAccountmanagerContainer"
			    			android:layout_height="match_parent" 
			    			android:layout_width="match_parent"
			    			android:orientation="vertical"
			    			android:weightSum="1.0">
			    			
			 	            <RelativeLayout 
			       				android:id="@+id/accountmanagerButtonVerticalSpacer" 
				        		android:layout_width="match_parent"
					 	    	android:layout_height="0dp"
					 	    	android:layout_weight="0.29" />
			 	            
			 	            <RelativeLayout 
			       				android:id="@+id/accountmanagerButtonVerticalContainer" 
				        		android:layout_width="match_parent"
					 	    	android:layout_height="0dp"
					 	    	android:layout_weight="0.50"
			            		android:layout_gravity="center" >
			 	        		
			 	                <LinearLayout
			 	    				android:id="@+id/footerHorizontalAccountmanagerContainer"
			    					android:layout_height="match_parent" 
			    					android:layout_width="match_parent"
			    					android:orientation="horizontal"
			    					android:weightSum="1.0">
			    					
			 	                    <RelativeLayout 
							       		android:id="@+id/accountmanagerButtonSpacer" 
								        android:layout_width="0dp"
								        android:layout_weight="0.24"
							            android:layout_height="match_parent">
								 	</RelativeLayout>
			 	                
				 	        		<ImageButton
						 	    		android:background="@null"
						 	    		android:id="@+id/accountmanagerButton"
						 	    		android:layout_width="0dp"
						 	    		android:layout_weight="0.8"
						 	    		android:layout_height="wrap_content"
							 	    	android:scaleType="fitStart"
							 	    	android:src="@drawable/title_change_button"/>
				 	   			</LinearLayout>
				 	   		</RelativeLayout>
				 	 	</LinearLayout>    
			 	    </RelativeLayout>
	 	    
			 		<RelativeLayout 
			       		android:id="@+id/loginButtonContainer" 
				        android:layout_width="0dp"
				        android:layout_weight="0.35"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center">
			 		        
			 		    <!-- <LinearLayout 
			 		    	    android:id="@+id/loginButtonVerticalContainer" 
						        android:layout_width="wrap_content"
						        android:orientation="vertical"
					            android:layout_height="wrap_content"
					            android:weightSum="1.0">
								
						 		<RelativeLayout 
						       		android:id="@+id/loginButtonVerticalSpacer" 
							        android:layout_width="1dp"
							        android:layout_weight="0.95"
						            android:layout_height="wrap_content"
						            android:layout_gravity="center" /> -->
			 		    	    
			 		    	    <TextView
			 		    	        android:id="@+id/title_version_text"
			 		    	        android:layout_width="fill_parent"
			 		    	        android:layout_height="wrap_content"
			 		    	        android:text="Version 1.23#49"
			 		    	        android:textSize="14sp"
			 		    	        android:gravity="right"
			 		    	        android:textColor="#AFAFAF"
			 		    	        android:layout_alignParentTop="true"
			 		    	        android:layout_marginTop="45dp"
			 		    	        android:layout_marginRight="30dp" />
			 		    	    			 	            
				 		        <ImageButton
							  	    android:background="@null"
							  	    android:id="@+id/loginButton"
						  		    android:layout_width="wrap_content"
							  	    android:layout_height="wrap_content"
							  	    android:adjustViewBounds="true"
						  		    android:scaleType="fitCenter"
						  		    android:layout_below="@+id/title_version_text" 
						  		    android:layout_marginTop="5dp"/>
				 		        
			 		    	<!--  </LinearLayout> -->
			 		</RelativeLayout>
			 		
			 		<RelativeLayout 
			       		android:id="@+id/facebookButtonContainer" 
				        android:layout_width="0dp"
				        android:layout_weight="0.13"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center">
				  		
				  		<LinearLayout 
		        			android:id="@+id/facebookLinearContainer"
		    				android:layout_height="match_parent" 
		    				android:layout_width="match_parent"
		    				android:orientation="vertical"
		    				android:weightSum="1.0">
			    		    
				  		    <RelativeLayout 
			     				android:id="@+id/facebookSpacer" 
				    			android:layout_width="match_parent"
				    			android:layout_weight="0.66"
			        			android:layout_height="0dp">
							</RelativeLayout>
				 		    
				 		    <RelativeLayout 
			       				android:id="@+id/facebookButtonVerticalContainer" 
				        		android:layout_width="wrap_content"
				        		android:layout_weight="0.35"
			            		android:layout_height="0dp"
			            		android:layout_gravity="center">
				 		    		
				 		    		<ImageButton
					 	    			android:background="@null"
					 	    			android:id="@+id/facebookButton"
					 	    			android:layout_width="wrap_content"
					 	    			android:layout_height="wrap_content"
					 	    			android:src="@drawable/title_facebook_button"
					 	    			android:scaleType="fitCenter"/>
				 		    </RelativeLayout>
				 		</LinearLayout>
			 		</RelativeLayout>
	 	            
	 		</LinearLayout>
		</RelativeLayout> 	    	
	</LinearLayout>
</FrameLayout>
