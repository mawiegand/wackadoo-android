<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wackadoo.wackadoo_client.activites.WackadooWebviewActivity"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/title_bg" />
    
    <LinearLayout 
        android:id="@+id/headerVerticalContainer"
    	android:layout_height="fill_parent" 
    	android:layout_width="fill_parent"
    	android:orientation="vertical"
    	android:weightSum="1.0">
    
	    <LinearLayout 
	        android:id="@+id/headerHorizontalContainer"
	        android:layout_weight="0.13"
	    	android:layout_height="0dp" 
	    	android:layout_width="fill_parent"
	    	android:orientation="horizontal"
	    	android:weightSum="1.0">
	    	
	    	<RelativeLayout 
	      	    android:id="@+id/headerShopContainer"  
		        android:layout_height="wrap_content"
	    	    android:layout_gravity="top|left"
	        	android:layout_width="0dp"
	      		android:layout_weight="0.18">
	      		
	    		<ImageView
	        		android:layout_width="fill_parent"
	        		android:layout_height="fill_parent"
		        	android:scaleType="fitStart"
	    	    	android:src="@drawable/title_left_corner" />
	    		
	    		<LinearLayout 
	        		android:id="@+id/shopButtonLinearContainer"
	        		android:layout_centerInParent="true"
	    			android:layout_height="fill_parent" 
			    	android:layout_width="fill_parent"
	    			android:orientation="vertical"
	    			android:weightSum="1.0">
	    			
	    		    <RelativeLayout
	    		        android:id="@+id/shopButtonSpacer" 
	 	    			android:layout_width="fill_parent"
	 	    			android:layout_weight="0.1"
	 	    			android:layout_height="0dp" >
	 				</RelativeLayout>
	    			
	    		    <RelativeLayout 
	      	    		android:id="@+id/shopButtonRelativeContainer"
		        		android:layout_height="0dp"
	    	    		android:layout_gravity="top|left"
	        			android:layout_width="wrap_content"
	      				android:layout_weight="0.5">
		    			
		    			<ImageButton
		    	    		android:id="@+id/shopButton"
		    	    		android:background="@null"
		    	    		android:layout_width="wrap_content"
		    	    		android:layout_height="wrap_content"
		    	    		android:scaleType="fitCenter"
		    	    		android:src="@drawable/title_shop_button" />
	    			</RelativeLayout>
	    		</LinearLayout>
	   		</RelativeLayout>
	   		
	    	<RelativeLayout 
	       		android:id="@+id/headerSpacer" 
		        android:layout_width="0dp"
		        android:layout_weight="0.6"
	            android:layout_height="fill_parent">
			</RelativeLayout>
	   		
	   		<RelativeLayout 
	      	    android:id="@+id/headerControls"  
		        android:layout_height="wrap_content"
	    	    android:layout_gravity="center"
	        	android:layout_width="0dp"
	      		android:layout_weight="0.2">
	    		
	    		<ImageView
	    	    	android:layout_width="wrap_content"
	    	    	android:layout_height="wrap_content"
	    	    	android:layout_gravity="left"
	    	    	android:layout_centerInParent="true"
	    	    	android:scaleType="fitCenter"
	    	    	android:src="@drawable/title_info_button"
	    	    	android:paddingRight="15dip"
	    	    	android:layout_alignParentRight="true" />
	    		
				<ImageView
	    	    	android:layout_height="wrap_content"
	    	    	android:layout_width="wrap_content"
	    	    	android:layout_gravity="right"
	    	    	android:layout_centerInParent="true"
	    	    	android:scaleType="fitCenter"
	    	    	android:src="@drawable/title_sound_off" 
					android:paddingRight="45dip"
	    	    	android:layout_alignParentRight="true" />
	   		</RelativeLayout>    		
	    </LinearLayout>
    </LinearLayout>
	    
    <LinearLayout 
        android:id="@+id/logoLinearContainer"
    	android:layout_height="fill_parent" 
    	android:layout_width="fill_parent"
    	android:orientation="vertical"
    	android:weightSum="1.0">
   		
	    <RelativeLayout 
	    	android:id="@+id/logoRelativecontainer" 
	        android:layout_width="wrap_content" 
	        android:layout_height="0dp"
	        android:layout_weight="0.8">
			
	    	<ImageView
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:adjustViewBounds="true"
	    	    android:scaleType="fitCenter"
	    	    android:src="@drawable/title_logo" />
	  	</RelativeLayout>
  	</LinearLayout>
  	
    <LinearLayout 
    	android:layout_height="fill_parent" 
    	android:layout_width="fill_parent"
    	android:orientation="vertical"
    	android:weightSum="1.0">
    	
	 	<RelativeLayout 
	 	    android:layout_width="fill_parent"
	 	    android:layout_weight="0.62"
	 	    android:layout_height="0dp" >
	 	</RelativeLayout>
	 	
	 	<RelativeLayout 
	 	    android:layout_width="fill_parent"
	 	    android:layout_weight="0.38"
	 	    android:layout_height="0dp" >
			
		 	<ImageView
		 	    android:layout_width="fill_parent"
		 	    android:layout_height="fill_parent"
		 	    android:layout_alignParentLeft="true"
		 	    android:layout_alignParentBottom="true"
		 	    android:adjustViewBounds="true"
		 	    android:scaleType="fitEnd"
		 	    android:src="@drawable/title_bar"/>
		 	
	 	</RelativeLayout>
 	</LinearLayout>
 	
    <LinearLayout 
        android:id="@+id/footerVerticalContainer"
	 	android:layout_height="fill_parent" 
	    android:layout_width="fill_parent"
	    android:orientation="vertical"
	    android:weightSum="1.0">
	 	
	 	<RelativeLayout 
	     	android:id="@+id/footerSpacer" 
		    android:layout_width="fill_parent"
		    android:layout_weight="0.74"
	        android:layout_height="0dp">
		</RelativeLayout>
	 	
	 	<LinearLayout
	 	    android:id="@+id/footerHorizontalContainer"
	    	android:layout_height="0dp" 
	    	android:layout_width="fill_parent"
	    	android:orientation="horizontal"
	    	android:layout_weight="0.26"
	    	android:weightSum="1.0">
		 	
	 	    <RelativeLayout 
	       		android:id="@+id/loginButtonSpacer" 
		        android:layout_width="0dp"
		        android:layout_weight="0.33"
	            android:layout_height="fill_parent">
		 	</RelativeLayout>
		 	
	 	    <RelativeLayout 
	       		android:id="@+id/accountmanagerButtonContainer" 
		        android:layout_width="0dp"
		        android:layout_weight="0.25"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center">
		 	
	 	        <LinearLayout
	 	    		android:id="@+id/footerVerticalAccountmanagerContainer"
	    			android:layout_height="fill_parent" 
	    			android:layout_width="fill_parent"
	    			android:orientation="vertical"
	    			android:weightSum="1.0">
	 	        
		 	        <ImageButton
			 	    	android:background="@null"
			 	    	android:id="@+id/accountmanagerButton"
			 	    	android:layout_width="wrap_content"
			 	    	android:layout_height="0dp"
			 	    	android:layout_weight="0.80"
			 	    	android:scaleType="fitCenter"
			 	    	android:src="@drawable/title_change_button"/>
		 	 	</LinearLayout>    
	 	    </RelativeLayout>
	 	    
	 		<RelativeLayout 
	       		android:id="@+id/loginButtonContainer" 
		        android:layout_width="0dp"
		        android:layout_weight="0.3"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center">
			 	
		  		<ImageButton
			  	    android:background="@null"
			  	    android:id="@+id/loginButton"
		  		    android:layout_width="wrap_content"
			  	    android:layout_height="wrap_content"
			  	    android:adjustViewBounds="true"
		  		    android:scaleType="fitCenter"
		  	    	android:src="@anim/animationlist_loginbutton" />
	 		</RelativeLayout>
	 		
	 		<RelativeLayout 
	       		android:id="@+id/facebookButtonContainer" 
		        android:layout_width="0dp"
		        android:layout_weight="0.12"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center">
		  		
		  		<LinearLayout 
        			android:id="@+id/facebookLinearContainer"
    				android:layout_height="fill_parent" 
    				android:layout_width="fill_parent"
    				android:orientation="vertical"
    				android:weightSum="1.0">
	    		    
		  		    <RelativeLayout 
	     				android:id="@+id/facebookSpacer" 
		    			android:layout_width="fill_parent"
		    			android:layout_weight="0.4"
	        			android:layout_height="0dp">
					</RelativeLayout>
		 		    
		 		    <RelativeLayout 
	       				android:id="@+id/facebookButtonVerticalContainer" 
		        		android:layout_width="wrap_content"
		        		android:layout_weight="0.6"
	            		android:layout_height="0dp"
	            		android:layout_gravity="center">
		 		    		
		 		    		<ImageButton
			 	    			android:background="@null"
			 	    			android:id="@+id/facebookButton"
			 	    			android:layout_width="wrap_content"
			 	    			android:layout_height="wrap_content"
			 	    			android:src="@drawable/title_facebook_button"
			 	    			android:scaleType="fitCenter"/>
		 		    </RelativeLayout>
		 		</LinearLayout>
	 		</RelativeLayout>	
	 	</LinearLayout>
	</LinearLayout>
</FrameLayout>
