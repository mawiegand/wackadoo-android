<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wackadoo_webview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:configChanges="orientation|screenSize"
            android:name="com.wackadoo.wackadoo_client.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
            android:configChanges="orientation|screenSize"
            android:name="com.wackadoo.wackadoo_client.WackadooWebviewActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:configChanges="orientation|screenSize"
            android:name="com.wackadoo.wackadoo_client.LoginScreenActivity"
            android:label="@string/app_name" >
        </activity>
    </application>
</manifest>
